<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.user.RegisterActivity">

    <EditText
        android:id="@+id/et_account"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_submit_edit_normal"
        android:hint="请输入账号"
        android:maxLines="1"
        android:padding="3dp"
        android:text="jay123"
        android:textColor="@color/colorMainBlack" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/et_account"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_submit_edit_normal"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="3dp"
        android:text="123456"
        android:textColor="@color/colorMainBlack" />

    <TextView
        android:id="@+id/tv_goto_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/et_password"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_submit_btn_normal"
        android:gravity="center"
        android:text="登陆"
        android:textColor="@color/colorMainBlack"
        android:textSize="28dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_goto_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_goto_login"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical|right"
        android:padding="12dp"
        android:text="注册"
        android:textColor="@color/colorMainBlack" />

</RelativeLayout>
