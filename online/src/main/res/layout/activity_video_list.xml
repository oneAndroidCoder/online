<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_course"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_course_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv_course"
        android:layout_margin="16dp"
        android:text="0.00"/>

    <TextView
        android:id="@+id/tv_course_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_course_price"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/tv_course_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_course_des"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/tv_add_shopping"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:background="@drawable/shape_submit_btn_normal"
        android:gravity="center"
        android:text="加入购物车"/>

    <TextView
        android:id="@+id/tv_buy_course"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_toLeftOf="@+id/tv_add_shopping"
        android:background="@drawable/shape_submit_btn_normal"
        android:gravity="center"
        android:text="去购买"
        android:textColor="#333"
        android:textSize="32dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_all_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_buy_course"
        android:layout_below="@+id/tv_course_teacher"></android.support.v7.widget.RecyclerView>

</RelativeLayout>